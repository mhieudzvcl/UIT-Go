import jwt from 'jsonwebtoken';

export function verifyToken(req, res, next) {
  const auth = req.headers['authorization'];
  console.log('[auth] authorization header:', auth);

  if (!auth || !auth.startsWith('Bearer ')) {
    console.warn('⚠️ Không có token, dùng user giả cho test nội bộ');
    req.user = { sub: req.body?.userId || 1, role: 'user' };
    console.log('[auth] assigned fake req.user:', req.user);
    return next();
  }

  try {
    const token = auth.split(' ')[1];
    const decoded = jwt.verify(token, process.env.JWT_SECRET);
    req.user = decoded;
    console.log('[auth] decoded token -> req.user:', req.user);
    next();
  } catch (err) {
    console.error('[auth] token verify error', err);
    res.status(403).json({ message: 'Token không hợp lệ' });
  }
}
